    @Override
    public boolean incrementToken() throws IOException {
      if (input.incrementToken()) {
        char term[] = termAtt.buffer();
        for (int i = 0; i < term.length; i++)
          switch (term[i]) {
            case 'ü':
              term[i] = 'u';
              break;
            case 'ö':
              term[i] = 'o';
              break;
            case 'é':
              term[i] = 'e';
              break;
            case 'ï':
              term[i] = 'i';
              break;
          }
        return true;
      } else {
        return false;
      }
    }

