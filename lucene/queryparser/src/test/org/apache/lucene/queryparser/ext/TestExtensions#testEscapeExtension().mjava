  public void testEscapeExtension() {
    assertEquals(
        "abc\\:\\?\\{\\}\\[\\]\\\\\\(\\)\\+\\-\\!\\~",
        ext.escapeExtensionField("abc:?{}[]\\()+-!~"));
    // should throw NPE - escape string is null
    expectThrows(
        NullPointerException.class,
        () -> {
          ext.escapeExtensionField(null);
        });
  }

