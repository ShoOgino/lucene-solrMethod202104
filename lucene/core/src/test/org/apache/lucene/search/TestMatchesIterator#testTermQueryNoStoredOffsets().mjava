  public void testTermQueryNoStoredOffsets() throws IOException {
    Query q = new TermQuery(new Term(FIELD_NO_OFFSETS, "w1"));
    checkMatches(
        q,
        FIELD_NO_OFFSETS,
        new int[][] {
          {0, 0, 0, -1, -1},
          {1, 0, 0, -1, -1},
          {2, 0, 0, -1, -1},
          {3, 0, 0, -1, -1, 2, 2, -1, -1},
          {4}
        });
  }

