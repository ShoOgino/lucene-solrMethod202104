  public int stem(char s[], int len) {
    if (len < 4) return len;

    for (int i = 0; i < len; i++)
      switch (s[i]) {
        case 'ä':
        case 'å':
          s[i] = 'a';
          break;
        case 'ö':
          s[i] = 'o';
          break;
      }

    len = step1(s, len);
    len = step2(s, len);
    len = step3(s, len);
    len = norm1(s, len);
    len = norm2(s, len);
    return len;
  }

