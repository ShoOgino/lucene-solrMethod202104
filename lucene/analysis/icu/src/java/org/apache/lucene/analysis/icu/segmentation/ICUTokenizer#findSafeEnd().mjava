  /**
   * Returns the last unambiguous break position in the text.
   *
   * @return position of character, or -1 if one does not exist
   */
  private int findSafeEnd() {
    for (int i = length - 1; i >= 0; i--) {
      if (UCharacter.isWhitespace(buffer[i])) {
        return i + 1;
      }
    }
    return -1;
  }

