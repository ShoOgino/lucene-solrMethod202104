    /** utility method to compute whether the point is in the triangle */
    protected boolean containsPoint(double lat, double lon) {
      return pointInTriangle(
          lon,
          lat,
          vertex[0].getX(),
          vertex[0].getY(),
          vertex[1].getX(),
          vertex[1].getY(),
          vertex[2].getX(),
          vertex[2].getY());
    }

