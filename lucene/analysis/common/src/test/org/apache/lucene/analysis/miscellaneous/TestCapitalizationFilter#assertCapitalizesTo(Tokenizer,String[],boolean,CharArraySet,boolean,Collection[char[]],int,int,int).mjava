        new CapitalizationFilter(
            tokenizer,
            onlyFirstWord,
            keep,
            forceFirstLetter,
            okPrefix,
            minWordLength,
            maxWordCount,
            maxTokenLength);
    assertTokenStreamContents(filter, expected);
