  public void testKatakanaReadingsHalfWidth() throws IOException {
    Analyzer a =
        new Analyzer() {
          @Override
          protected TokenStreamComponents createComponents(String fieldName) {
            Tokenizer tokenizer =
                new JapaneseTokenizer(
                    newAttributeFactory(), null, true, JapaneseTokenizer.Mode.SEARCH);
            TokenStream stream = new CJKWidthFilter(tokenizer);
            return new TokenStreamComponents(
                tokenizer, new JapaneseReadingFormFilter(stream, false));
          }
        };
    assertAnalyzesTo(
        a, "今夜はﾛﾊﾞｰﾄ先生と話した", new String[] {"コンヤ", "ハ", "ロバート", "センセイ", "ト", "ハナシ", "タ"});
    a.close();
  }

