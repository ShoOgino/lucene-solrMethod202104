  public void testTwoSynsInARow() throws Exception {
    SynonymMap.Builder b = new SynonymMap.Builder();
    add(b, "a", "x", false);

    Analyzer a = getAnalyzer(b, true);
    assertAnalyzesTo(
        a,
        "c a a b",
        new String[] {"c", "x", "x", "b"},
        new int[] {0, 2, 4, 6},
        new int[] {1, 3, 5, 7},
        new String[] {"word", "SYNONYM", "SYNONYM", "word"},
        new int[] {1, 1, 1, 1},
        new int[] {1, 1, 1, 1});
    a.close();
  }

