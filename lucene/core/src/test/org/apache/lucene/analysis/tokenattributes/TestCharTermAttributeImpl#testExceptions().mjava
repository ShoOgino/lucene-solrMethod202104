  public void testExceptions() {
    CharTermAttributeImpl t = new CharTermAttributeImpl();
    t.append("test");
    assertEquals("test", t.toString());

    expectThrows(
        IndexOutOfBoundsException.class,
        () -> {
          t.charAt(-1);
        });

    expectThrows(
        IndexOutOfBoundsException.class,
        () -> {
          t.charAt(4);
        });

    expectThrows(
        IndexOutOfBoundsException.class,
        () -> {
          t.subSequence(0, 5);
        });

    expectThrows(
        IndexOutOfBoundsException.class,
        () -> {
          t.subSequence(5, 0);
        });
  }

