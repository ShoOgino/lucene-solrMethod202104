  public int stem(char s[], int len) {
    if (len < 5) return len;

    for (int i = 0; i < len; i++)
      switch (s[i]) {
        case 'ä':
          s[i] = 'a';
          break;
        case 'ö':
          s[i] = 'o';
          break;
        case 'ü':
          s[i] = 'u';
          break;
      }

    if (len > 6 && s[len - 3] == 'n' && s[len - 2] == 'e' && s[len - 1] == 'n') return len - 3;

    if (len > 5)
      switch (s[len - 1]) {
        case 'n':
          if (s[len - 2] == 'e') return len - 2;
          else break;
        case 'e':
          if (s[len - 2] == 's') return len - 2;
          else break;
        case 's':
          if (s[len - 2] == 'e') return len - 2;
          else break;
        case 'r':
          if (s[len - 2] == 'e') return len - 2;
          else break;
      }

    switch (s[len - 1]) {
      case 'n':
      case 'e':
      case 's':
      case 'r':
        return len - 1;
    }

    return len;
  }

