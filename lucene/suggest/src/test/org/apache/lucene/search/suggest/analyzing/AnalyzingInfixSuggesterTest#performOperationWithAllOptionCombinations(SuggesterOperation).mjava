  /**
   * Perform the given operation on suggesters constructed with all combinations of options
   * commitOnBuild and closeIndexWriterOnBuild, including defaults.
   */
  private void performOperationWithAllOptionCombinations(SuggesterOperation operation)
      throws Exception {
    Analyzer a = new MockAnalyzer(random(), MockTokenizer.WHITESPACE, false);

    AnalyzingInfixSuggester suggester = new AnalyzingInfixSuggester(newDirectory(), a);
    operation.operate(suggester);
    suggester.close();

    suggester = new AnalyzingInfixSuggester(newDirectory(), a, a, 3, false);
    operation.operate(suggester);
    suggester.close();

    suggester = new AnalyzingInfixSuggester(newDirectory(), a, a, 3, true);
    operation.operate(suggester);
    suggester.close();

    suggester =
        new AnalyzingInfixSuggester(
            newDirectory(),
            a,
            a,
            3,
            true,
            AnalyzingInfixSuggester.DEFAULT_ALL_TERMS_REQUIRED,
            AnalyzingInfixSuggester.DEFAULT_HIGHLIGHT,
            true);
    operation.operate(suggester);
    suggester.close();

    suggester =
        new AnalyzingInfixSuggester(
            newDirectory(),
            a,
            a,
            3,
            true,
            AnalyzingInfixSuggester.DEFAULT_ALL_TERMS_REQUIRED,
            AnalyzingInfixSuggester.DEFAULT_HIGHLIGHT,
            false);
    operation.operate(suggester);
    suggester.close();

    suggester =
        new AnalyzingInfixSuggester(
            newDirectory(),
            a,
            a,
            3,
            false,
            AnalyzingInfixSuggester.DEFAULT_ALL_TERMS_REQUIRED,
            AnalyzingInfixSuggester.DEFAULT_HIGHLIGHT,
            true);
    operation.operate(suggester);
    suggester.close();

    suggester =
        new AnalyzingInfixSuggester(
            newDirectory(),
            a,
            a,
            3,
            false,
            AnalyzingInfixSuggester.DEFAULT_ALL_TERMS_REQUIRED,
            AnalyzingInfixSuggester.DEFAULT_HIGHLIGHT,
            false);
    operation.operate(suggester);
    suggester.close();

    a.close();
  }

