  @Test
  public void testNearQuery() throws IOException {

    //   2     4
    // twenty two
    //  2     4      4     4
    // one hundred twenty two

    SpanNearQuery q =
        new SpanNearQuery(
            new SpanQuery[] {
              new SpanTermQuery(new Term("field", "twenty")),
              new SpanTermQuery(new Term("field", "two"))
            },
            0,
            true);

    checkQuery(
        q, new MaxPayloadFunction(), new int[] {22, 122, 222}, new float[] {4.0f, 4.0f, 4.0f});
    checkQuery(
        q, new MinPayloadFunction(), new int[] {122, 222, 22}, new float[] {4.0f, 4.0f, 2.0f});
    checkQuery(
        q, new AveragePayloadFunction(), new int[] {122, 222, 22}, new float[] {4.0f, 4.0f, 3.0f});
  }

