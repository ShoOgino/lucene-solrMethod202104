  public void testIncomingGraphs() throws IOException {

    // b/a c b/a d

    TokenStream ts =
        new CannedTokenStream(
            new Token("b", 0, 1),
            new Token("a", 0, 0, 1),
            new Token("c", 2, 3),
            new Token("b", 4, 5),
            new Token("a", 0, 4, 5),
            new Token("d", 6, 7));

    assertTokenStreamContents(
        new FixedShingleFilter(ts, 2),
        new String[] {"b c", "a c", "c b", "c a", "b d", "a d"},
        new int[] {0, 0, 2, 2, 4, 4},
        new int[] {3, 3, 5, 5, 7, 7},
        new int[] {1, 0, 1, 0, 1, 0});
  }

