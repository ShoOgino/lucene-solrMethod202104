  protected PhraseWildcardQuery phraseWildcardQuery(
      String field,
      int maxExpansions,
      int slop,
      boolean segmentOptimizationEnabled,
      String... terms) {
    PhraseWildcardQuery.Builder builder =
        createPhraseWildcardQueryBuilder(field, maxExpansions, segmentOptimizationEnabled)
            .setSlop(slop);
    for (String term : terms) {
      if (term.contains("*") || term.contains("?")) {
        builder.addMultiTerm(new WildcardQuery(new Term(field, term)));
      } else {
        builder.addTerm(new BytesRef(term));
      }
    }
    return builder.build();
  }

