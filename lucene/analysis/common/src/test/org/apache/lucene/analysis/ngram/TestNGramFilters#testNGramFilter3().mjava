  /** Test the NGramFilterFactory with preserve option */
  public void testNGramFilter3() throws Exception {
    Reader reader = new StringReader("test");
    TokenStream stream = whitespaceMockTokenizer(reader);
    stream =
        tokenFilterFactory(
                "NGram", "minGramSize", "2", "maxGramSize", "3", "preserveOriginal", "true")
            .create(stream);
    assertTokenStreamContents(stream, new String[] {"te", "tes", "es", "est", "st", "test"});
  }

