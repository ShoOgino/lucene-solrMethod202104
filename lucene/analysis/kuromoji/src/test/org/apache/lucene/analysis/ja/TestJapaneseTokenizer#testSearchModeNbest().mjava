  public void testSearchModeNbest() throws Exception {
    JapaneseTokenizer t = makeTokenizer(true, Mode.SEARCH);
    Analyzer a = makeAnalyzer(t);

    t.setNBestCost(0);
    assertAnalyzesTo(a, "成田空港、米原油流出", new String[] {"成田", "空港", "米", "原油", "流出"});

    t.setNBestCost(4000);
    assertAnalyzesTo(
        a, "成田空港、米原油流出", new String[] {"成田", "成田空港", "空港", "米", "米原", "原油", "油", "流出"});
  }

