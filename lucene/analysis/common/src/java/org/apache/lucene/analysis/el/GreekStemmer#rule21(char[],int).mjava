            || endsWith(s, len, "ηδεσ")
            || endsWith(s, len, "ηδων")
            || endsWith(s, len, "ηθει")
            || endsWith(s, len, "ηκαν")
            || endsWith(s, len, "ησαν")
            || endsWith(s, len, "ησει")
            || endsWith(s, len, "ησεσ")
            || endsWith(s, len, "ομαι")
            || endsWith(s, len, "οταν"))) return len - 4;

    if (len > 3
        && (endsWith(s, len, "αει")
            || endsWith(s, len, "εισ")
            || endsWith(s, len, "ηθω")
            || endsWith(s, len, "ησω")
            || endsWith(s, len, "ουν")
            || endsWith(s, len, "ουσ"))) return len - 3;

    if (len > 2
        && (endsWith(s, len, "αν")
            || endsWith(s, len, "ασ")
            || endsWith(s, len, "αω")
            || endsWith(s, len, "ει")
            || endsWith(s, len, "εσ")
            || endsWith(s, len, "ησ")
            || endsWith(s, len, "οι")
            || endsWith(s, len, "οσ")
            || endsWith(s, len, "ου")
            || endsWith(s, len, "υσ")
            || endsWith(s, len, "ων"))) return len - 2;

    if (len > 1 && endsWithVowel(s, len)) return len - 1;

    return len;
  }

