  public static void getTermInfo(Directory dir, Term term) throws Exception {
    IndexReader reader = DirectoryReader.open(dir);
    System.out.printf(
        Locale.ROOT,
        "%s:%s \t totalTF = %,d \t doc freq = %,d \n",
        term.field(),
        term.text(),
        reader.totalTermFreq(term),
        reader.docFreq(term));
  }

