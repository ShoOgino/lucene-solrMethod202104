  public void testStopWords() throws Exception {
    Analyzer analyzer = new ThaiAnalyzer();
    assertAnalyzesTo(
        analyzer,
        "การที่ได้ต้องแสดงว่างานดี",
        new String[] {"แสดง", "งาน", "ดี"},
        new int[] {13, 20, 23},
        new int[] {17, 23, 25},
        new int[] {5, 2, 1});
    analyzer.close();
  }

