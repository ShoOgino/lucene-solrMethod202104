  /**
   * Count the vowels in the string, we always require at least one in the remaining stem to accept
   * it.
   */
  private int numVowels(char s[], int len) {
    int n = 0;
    for (int i = 0; i < len; i++) {
      switch (s[i]) {
        case 'a':
        case 'e':
        case 'i':
        case 'o':
        case 'u':
        case 'ā':
        case 'ī':
        case 'ē':
        case 'ū':
          n++;
      }
    }
    return n;
  }

