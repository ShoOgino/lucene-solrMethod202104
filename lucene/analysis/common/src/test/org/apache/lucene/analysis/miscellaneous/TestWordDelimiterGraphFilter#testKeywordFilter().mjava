  public void testKeywordFilter() throws Exception {
    assertAnalyzesTo(
        keywordTestAnalyzer(GENERATE_WORD_PARTS),
        "abc-def klm-nop kpop",
        new String[] {"abc", "def", "klm", "nop", "kpop"});
    assertAnalyzesTo(
        keywordTestAnalyzer(GENERATE_WORD_PARTS | IGNORE_KEYWORDS),
        "abc-def klm-nop kpop",
        new String[] {"abc", "def", "klm-nop", "kpop"},
        new int[] {0, 0, 8, 16},
        new int[] {7, 7, 15, 20},
        null,
        new int[] {1, 1, 1, 1},
        null,
        false);
  }

