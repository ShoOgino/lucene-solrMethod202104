  /** Creates a new {@link LeafReaderContext} */
  LeafReaderContext(
      CompositeReaderContext parent,
      LeafReader reader,
      int ord,
      int docBase,
      int leafOrd,
      int leafDocBase) {
    super(parent, ord, docBase);
    this.ord = leafOrd;
    this.docBase = leafDocBase;
    this.reader = reader;
    this.leaves = isTopLevel ? Collections.singletonList(this) : null;
  }

