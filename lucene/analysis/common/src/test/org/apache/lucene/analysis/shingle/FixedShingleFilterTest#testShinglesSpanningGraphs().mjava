  public void testShinglesSpanningGraphs() throws IOException {

    TokenStream ts =
        new CannedTokenStream(
            new Token("b", 0, 1),
            new Token("a", 0, 0, 1),
            new Token("c", 2, 3),
            new Token("b", 4, 5),
            new Token("a", 0, 4, 5),
            new Token("d", 6, 7));

    assertTokenStreamContents(
        new FixedShingleFilter(ts, 3),
        new String[] {"b c b", "b c a", "a c b", "a c a", "c b d", "c a d"},
        new int[] {
          0, 0, 0, 0, 2, 2,
        },
        new int[] {
          5, 5, 5, 5, 7, 7,
        },
        new int[] {
          1, 0, 0, 0, 1, 0,
        });
  }

