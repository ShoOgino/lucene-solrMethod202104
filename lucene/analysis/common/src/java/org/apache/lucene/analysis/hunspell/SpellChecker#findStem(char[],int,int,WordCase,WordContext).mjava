  private CharsRef findStem(
      char[] wordChars, int offset, int length, WordCase originalCase, WordContext context) {
    CharsRef[] result = {null};
    stemmer.doStem(
        wordChars,
        offset,
        length,
        originalCase,
        context,
        (stem, forms, formID) -> {
          result[0] = stem;
          return false;
        });
    return result[0];
  }

