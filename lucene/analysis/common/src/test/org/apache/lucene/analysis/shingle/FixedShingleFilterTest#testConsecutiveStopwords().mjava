  public void testConsecutiveStopwords() throws IOException {

    TokenStream ts =
        new CannedTokenStream(
            new Token("b", 2, 2, 3),
            new Token("c", 4, 5),
            new Token("d", 6, 7),
            new Token("b", 3, 12, 13),
            new Token("c", 14, 15));

    assertTokenStreamContents(
        new FixedShingleFilter(ts, 4),
        new String[] {"b c d _", "c d _ _", "d _ _ b"},
        new int[] {
          2, 4, 6,
        },
        new int[] {
          7, 7, 13,
        },
        new int[] {
          2, 1, 1,
        });
  }

