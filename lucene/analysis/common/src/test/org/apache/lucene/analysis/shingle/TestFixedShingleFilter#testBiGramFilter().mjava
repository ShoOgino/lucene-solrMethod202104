  public void testBiGramFilter() throws IOException {

    TokenStream ts =
        new CannedTokenStream(
            new Token("please", 0, 6),
            new Token("divide", 7, 13),
            new Token("this", 14, 18),
            new Token("sentence", 19, 27),
            new Token("into", 28, 32),
            new Token("shingles", 33, 41));

    assertTokenStreamContents(
        new FixedShingleFilter(ts, 2),
        new String[] {
          "please divide", "divide this", "this sentence", "sentence into", "into shingles"
        },
        new int[] {
          0, 7, 14, 19, 28,
        },
        new int[] {
          13, 18, 27, 32, 41,
        },
        new String[] {
          "shingle", "shingle", "shingle", "shingle", "shingle",
        },
        new int[] {
          1, 1, 1, 1, 1,
        },
        new int[] {1, 1, 1, 1, 1});
  }

