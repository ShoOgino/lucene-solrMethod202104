  static void assertCapitalizesTo(
      Tokenizer tokenizer,
      String expected[],
      boolean onlyFirstWord,
      CharArraySet keep,
      boolean forceFirstLetter,
      Collection<char[]> okPrefix,
      int minWordLength,
      int maxWordCount,
      int maxTokenLength)
      throws IOException {
