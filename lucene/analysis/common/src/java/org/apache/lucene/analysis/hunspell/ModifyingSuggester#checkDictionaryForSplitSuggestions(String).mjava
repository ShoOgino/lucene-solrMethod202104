  private boolean checkDictionaryForSplitSuggestions(String word) {
    boolean found = false;
    for (int i = 1; i < word.length() - 1; i++) {
      String w1 = word.substring(0, i);
      String w2 = word.substring(i);
      found |= trySuggestion(w1 + " " + w2);
      if (shouldSplitByDash()) {
        found |= trySuggestion(w1 + "-" + w2);
      }
    }
    return found;
  }

