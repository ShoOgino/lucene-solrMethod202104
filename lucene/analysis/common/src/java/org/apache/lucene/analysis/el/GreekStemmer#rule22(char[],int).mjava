  private int rule22(char s[], int len) {
    if (endsWith(s, len, "εστερ") || endsWith(s, len, "εστατ")) return len - 5;

    if (endsWith(s, len, "οτερ")
        || endsWith(s, len, "οτατ")
        || endsWith(s, len, "υτερ")
        || endsWith(s, len, "υτατ")
        || endsWith(s, len, "ωτερ")
        || endsWith(s, len, "ωτατ")) return len - 4;

    return len;
  }

