  public void testOffsetGaps() throws IOException {
    CannedTokenStream cts1 =
        new CannedTokenStream(2, 10, new Token("a", 0, 1), new Token("b", 2, 3));
    CannedTokenStream cts2 =
        new CannedTokenStream(2, 10, new Token("c", 0, 1), new Token("d", 2, 3));

    TokenStream ts = new ConcatenatingTokenStream(cts1, cts2);
    assertTokenStreamContents(
        ts,
        new String[] {"a", "b", "c", "d"},
        new int[] {0, 2, 10, 12},
        new int[] {1, 3, 11, 13},
        null,
        new int[] {1, 1, 3, 1},
        null,
        20,
        2,
        null,
        false,
        null);
  }

