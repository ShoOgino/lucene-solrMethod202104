  public void testDefaultSummaryTargetLen() throws IOException {
    Query query = query("zz");
    for (float align : ALIGNS) { // alignment is not used for creating default-summary
      assertEquals("Aa bb.", highlightClosestToLen(CONTENT, query, 6 + random().nextInt(4), align));
      assertEquals(
          "Aa bb. Cc dd.", highlightClosestToLen(CONTENT, query, 12 + random().nextInt(4), align));
      assertEquals(
          "Aa bb. Cc dd. Ee ff",
          highlightClosestToLen(CONTENT, query, 17 + random().nextInt(20), align));
    }
    assertEquals(
        "Aa bb. Cc dd.", highlightClosestToLen(CONTENT, query, 6 + random().nextInt(4), 0.f, 2));
  }

