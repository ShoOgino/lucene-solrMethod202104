  /** Create a {@code SegmentReadState}. */
  public SegmentReadState(
      Directory dir,
      SegmentInfo info,
      FieldInfos fieldInfos,
      IOContext context,
      String segmentSuffix) {
    this.directory = dir;
    this.segmentInfo = info;
    this.fieldInfos = fieldInfos;
    this.context = context;
    this.segmentSuffix = segmentSuffix;
  }

