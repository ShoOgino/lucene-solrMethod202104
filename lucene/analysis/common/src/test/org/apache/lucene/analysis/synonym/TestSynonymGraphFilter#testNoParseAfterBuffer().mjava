  public void testNoParseAfterBuffer() throws Exception {
    SynonymMap.Builder b = new SynonymMap.Builder();
    add(b, "b a", "x", true);

    Analyzer a = getAnalyzer(b, true);
    assertAnalyzesTo(
        a,
        "b b b",
        new String[] {"b", "b", "b"},
        new int[] {0, 2, 4},
        new int[] {1, 3, 5},
        new String[] {"word", "word", "word"},
        new int[] {1, 1, 1},
        new int[] {1, 1, 1});
    a.close();
  }

