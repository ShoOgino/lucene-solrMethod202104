  @Before
  public void indexDocs() throws Exception {
    del("*:*");

    String[] languages = {
        "English",
        "French",
        "German",
        "Unknown",
    };

    int docId = 0;
    for (String[] doc : SampleData.SAMPLE_DOCUMENTS) {
      index(
          "id", Integer.toString(docId),
          "title", doc[0],
          "snippet", doc[1],
          "testSet", "sampleDocs",
          "lang", languages[docId % languages.length]
      );
      docId++;
    }
    commit();
  }

