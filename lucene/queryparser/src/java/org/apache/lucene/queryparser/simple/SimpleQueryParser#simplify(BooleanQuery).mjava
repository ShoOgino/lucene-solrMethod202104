  /** Helper to simplify boolean queries with 0 or 1 clause */
  protected Query simplify(BooleanQuery bq) {
    if (bq.clauses().isEmpty()) {
      return null;
    } else if (bq.clauses().size() == 1) {
      return bq.clauses().iterator().next().getQuery();
    } else {
      return bq;
    }
  }

