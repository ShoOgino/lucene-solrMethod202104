  // replace \0 with the field name and create a parsable string
  public String func(String field, String template) {
    StringBuilder sb = new StringBuilder("{!func}");
    for (char ch : template.toCharArray()) {
      if (ch=='\0') {
        sb.append(field);
        continue;
      }
      sb.append(ch);
    }
    return sb.toString();
  }

