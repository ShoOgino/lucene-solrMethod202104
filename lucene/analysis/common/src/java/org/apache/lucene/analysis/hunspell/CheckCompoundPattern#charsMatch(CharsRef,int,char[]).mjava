  private static boolean charsMatch(CharsRef word, int offset, char[] pattern) {
    int len = pattern.length;
    if (word.length - offset < len || offset < 0 || offset > word.length) {
      return false;
    }

    for (int i = 0; i < len; i++) {
      if (word.chars[word.offset + offset + i] != pattern[i]) {
        return false;
      }
    }
    return true;
  }

