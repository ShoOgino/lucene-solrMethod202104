  public void testOffsets() throws Exception {
    Analyzer analyzer = new SmartChineseAnalyzer(true);
    assertAnalyzesTo(
        analyzer,
        "我购买了道具和服装",
        new String[] {"我", "购买", "了", "道具", "和", "服装"},
        new int[] {0, 1, 3, 4, 6, 7},
        new int[] {1, 3, 4, 6, 7, 9});
    analyzer.close();
  }

