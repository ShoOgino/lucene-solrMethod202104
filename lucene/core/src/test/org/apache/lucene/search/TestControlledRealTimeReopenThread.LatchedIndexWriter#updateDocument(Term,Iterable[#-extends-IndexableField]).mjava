    @Override
    public long updateDocument(Term term, Iterable<? extends IndexableField> doc)
        throws IOException {
      long result = super.updateDocument(term, doc);
      try {
        if (waitAfterUpdate) {
          signal.countDown();
          latch.await();
        }
      } catch (InterruptedException e) {
        throw new ThreadInterruptedException(e);
      }
      return result;
    }

