  public void testInvalidPolygon() throws Exception {
    String wkt = "POLYGON((0 0, 1 1, 0 1, 1 0, 0 0))";
    Polygon polygon = (Polygon) SimpleWKTShapeParser.parse(wkt);
    expectThrows(
        IllegalArgumentException.class,
        () -> {
          Tessellator.tessellate(polygon);
        });
  }

