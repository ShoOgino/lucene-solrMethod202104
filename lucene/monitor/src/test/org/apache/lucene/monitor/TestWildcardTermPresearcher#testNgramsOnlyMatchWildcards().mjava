  public void testNgramsOnlyMatchWildcards() throws IOException {
    try (Monitor monitor = newMonitor()) {
      monitor.register(new MonitorQuery("1", parse("hello")));
      assertEquals(
          0,
          monitor
              .match(buildDoc(TEXTFIELD, "hellopolis"), QueryMatch.SIMPLE_MATCHER)
              .getQueriesRun());
    }
  }

