  public void testTriangleContains() {
    Component2D point2D = Point2D.create(new Point(0, 0));
    double ax = 0.0;
    double ay = 0.0;
    assertTrue(point2D.contains(ax, ay));
    assertEquals(
        Component2D.WithinRelation.CANDIDATE,
        point2D.withinTriangle(
            ax,
            ay,
            random().nextBoolean(),
            ax,
            ay,
            random().nextBoolean(),
            ax,
            ay,
            random().nextBoolean()));
  }

