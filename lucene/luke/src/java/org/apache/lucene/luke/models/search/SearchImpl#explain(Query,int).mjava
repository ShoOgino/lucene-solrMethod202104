  @Override
  public Explanation explain(Query query, int docid) {
    try {
      return searcher.explain(query, docid);
    } catch (IOException e) {
      throw new LukeException(
          String.format(
              Locale.ENGLISH,
              "Failed to create explanation for doc: %d for query: \"%s\"",
              docid,
              query.toString()),
          e);
    }
  }

