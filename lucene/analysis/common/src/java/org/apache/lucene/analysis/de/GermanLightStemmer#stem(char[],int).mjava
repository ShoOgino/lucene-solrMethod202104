  public int stem(char s[], int len) {
    for (int i = 0; i < len; i++)
      switch (s[i]) {
        case 'ä':
        case 'à':
        case 'á':
        case 'â':
          s[i] = 'a';
          break;
        case 'ö':
        case 'ò':
        case 'ó':
        case 'ô':
          s[i] = 'o';
          break;
        case 'ï':
        case 'ì':
        case 'í':
        case 'î':
          s[i] = 'i';
          break;
        case 'ü':
        case 'ù':
        case 'ú':
        case 'û':
          s[i] = 'u';
          break;
      }

    len = step1(s, len);
    return step2(s, len);
  }

