    /** pretty print the triangle vertices */
    public String toString() {
      String result =
          vertex[0].x
              + ", "
              + vertex[0].y
              + " ["
              + edgeFromPolygon[0]
              + "] "
              + vertex[1].x
              + ", "
              + vertex[1].y
              + " ["
              + edgeFromPolygon[1]
              + "] "
              + vertex[2].x
              + ", "
              + vertex[2].y
              + " ["
              + edgeFromPolygon[2]
              + "]";
      return result;
    }

