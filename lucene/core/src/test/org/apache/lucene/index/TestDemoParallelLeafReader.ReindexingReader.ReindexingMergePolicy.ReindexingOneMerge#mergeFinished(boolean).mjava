        @Override
        public void mergeFinished(boolean success) throws IOException {
          Throwable th = null;
          for (ParallelLeafReader r : parallelReaders) {
            try {
              r.decRef();
            } catch (Throwable t) {
              if (th == null) {
                th = t;
              }
            }
          }

          if (th != null) {
            throw IOUtils.rethrowAlways(th);
          }
        }

