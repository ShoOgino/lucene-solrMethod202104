  /**
   * Fill the provided {@link Transition} with the index'th transition leaving the specified state.
   */
  public void getTransition(int state, int index, Transition t) {
    int i = states[2 * state] + 3 * index;
    t.source = state;
    t.dest = transitions[i++];
    t.min = transitions[i++];
    t.max = transitions[i++];
  }

