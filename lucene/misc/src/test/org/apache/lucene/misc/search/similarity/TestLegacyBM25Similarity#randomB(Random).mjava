  private static float randomB(Random random) {
    // length normalization parameter b [0 .. 1]
    switch (random.nextInt(4)) {
      case 0:
        // minimum value
        return 0;
      case 1:
        // tiny value
        return Float.MIN_VALUE;
      case 2:
        // maximum value
        return 1;
      default:
        // random value
        return random.nextFloat();
    }
  }

