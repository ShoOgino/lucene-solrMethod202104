  public void testTrailingStopwords() throws IOException {

    TokenStream ts =
        new CannedTokenStream(
            1, 7, new Token("b", 0, 1), new Token("c", 2, 3), new Token("d", 4, 5));

    assertTokenStreamContents(
        new FixedShingleFilter(ts, 3),
        new String[] {"b c d", "c d _"},
        new int[] {
          0, 2,
        },
        new int[] {
          5, 5,
        },
        new int[] {
          1, 1,
        });
  }

