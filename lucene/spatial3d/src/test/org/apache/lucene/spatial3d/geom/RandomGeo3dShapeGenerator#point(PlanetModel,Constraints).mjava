  /**
   * Method that returns a random generated a GeoPointShape under given constraints. Returns NULL if
   * it cannot build the GeoCircle under the given constraints.
   *
   * @param planetModel The planet model.
   * @param constraints The given constraints.
   * @return The random generated GeoPointShape.
   */
  private GeoPointShape point(PlanetModel planetModel, Constraints constraints) {
    int iterations = 0;
    while (iterations < MAX_SHAPE_ITERATIONS) {
      iterations++;
      final GeoPoint point = randomGeoPoint(planetModel, constraints);
      if (point == null) {
        continue;
      }
      try {

        GeoPointShape pointShape =
            GeoPointShapeFactory.makeGeoPointShape(
                planetModel, point.getLatitude(), point.getLongitude());
        if (!constraints.valid(pointShape)) {
          continue;
        }
        return pointShape;
      } catch (IllegalArgumentException e) {
        continue;
      }
    }
    return null;
  }

