  public void testOutOfBoundsAccess() throws IOException {
    int numDocs = reader.maxDoc();

    expectThrows(
        IndexOutOfBoundsException.class,
        () -> {
          reader.document(-1);
        });

    expectThrows(
        IndexOutOfBoundsException.class,
        () -> {
          reader.getTermVectors(-1);
        });

    expectThrows(
        IndexOutOfBoundsException.class,
        () -> {
          reader.document(numDocs);
        });

    expectThrows(
        IndexOutOfBoundsException.class,
        () -> {
          reader.getTermVectors(numDocs);
        });
  }

