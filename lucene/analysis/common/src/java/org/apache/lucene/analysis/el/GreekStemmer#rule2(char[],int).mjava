  private int rule2(char s[], int len) {
    if (len > 4 && (endsWith(s, len, "εδεσ") || endsWith(s, len, "εδων"))) {
      len -= 4;
      if (endsWith(s, len, "οπ")
          || endsWith(s, len, "ιπ")
          || endsWith(s, len, "εμπ")
          || endsWith(s, len, "υπ")
          || endsWith(s, len, "γηπ")
          || endsWith(s, len, "δαπ")
          || endsWith(s, len, "κρασπ")
          || endsWith(s, len, "μιλ")) len += 2; // add back -εδ
    }
    return len;
  }

