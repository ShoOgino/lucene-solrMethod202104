  @Override
  public IndexInput clone() {
    ensureOpen();
    ByteBuffersIndexInput cloned =
        new ByteBuffersIndexInput(in.slice(0, in.size()), "(clone of) " + toString());
    try {
      cloned.seek(getFilePointer());
    } catch (IOException e) {
      throw new UncheckedIOException(e);
    }
    return cloned;
  }

