  @Override
  public Optional<DocValues> getDocValues(int docid, String field) {
    try {
      return dvAdapter.getDocValues(docid, field);
    } catch (IOException e) {
      throw new LukeException(
          String.format(
              Locale.ENGLISH, "Doc values not available for doc: #%d and field: %s", docid, field),
          e);
    }
  }

