        Intervals.ordered(
            Intervals.or(Intervals.term("alph"), Intervals.term("sacred")),
            Intervals.term("measureless"));
    checkIntervals(source, "field2", 1, new int[][] {{}, {3, 8}, {}, {}, {}, {}});
    assertEquals(2, source.minExtent());

    checkVisits(source, 5, "alph", "sacred", "measureless");
  }

