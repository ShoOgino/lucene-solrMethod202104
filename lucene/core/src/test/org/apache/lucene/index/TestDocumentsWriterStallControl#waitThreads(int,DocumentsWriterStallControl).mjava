  public static Thread[] waitThreads(int num, final DocumentsWriterStallControl ctrl) {
    Thread[] array = new Thread[num];
    for (int i = 0; i < array.length; i++) {
      array[i] =
          new Thread() {
            @Override
            public void run() {
              ctrl.waitIfStalled();
            }
          };
    }
    return array;
  }

