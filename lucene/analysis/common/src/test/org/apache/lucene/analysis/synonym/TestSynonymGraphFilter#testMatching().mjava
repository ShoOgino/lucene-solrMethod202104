  public void testMatching() throws Exception {
    SynonymMap.Builder b = new SynonymMap.Builder(true);
    final boolean keepOrig = false;
    add(b, "a b", "ab", keepOrig);
    add(b, "a c", "ac", keepOrig);
    add(b, "a", "aa", keepOrig);
    add(b, "b", "bb", keepOrig);
    add(b, "z x c v", "zxcv", keepOrig);
    add(b, "x c", "xc", keepOrig);

    Analyzer a = getFlattenAnalyzer(b, true);

    checkOneTerm(a, "$", "$");
    checkOneTerm(a, "a", "aa");
    checkOneTerm(a, "b", "bb");

    assertAnalyzesTo(a, "a $", new String[] {"aa", "$"}, new int[] {1, 1});

    assertAnalyzesTo(a, "$ a", new String[] {"$", "aa"}, new int[] {1, 1});

    assertAnalyzesTo(a, "a a", new String[] {"aa", "aa"}, new int[] {1, 1});

    assertAnalyzesTo(a, "z x c v", new String[] {"zxcv"}, new int[] {1});

    assertAnalyzesTo(a, "z x c $", new String[] {"z", "xc", "$"}, new int[] {1, 1, 1});
    a.close();
  }

