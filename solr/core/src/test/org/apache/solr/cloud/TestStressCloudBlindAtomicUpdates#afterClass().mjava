  @AfterClass
  private static void afterClass() throws Exception {
    TestInjection.reset();
    ExecutorUtil.shutdownAndAwaitTermination(EXEC_SERVICE);
    EXEC_SERVICE = null;
    IOUtils.closeQuietly(CLOUD_CLIENT);
    CLOUD_CLIENT = null;
    for (HttpSolrClient client : CLIENTS) {
      client.close();
    }
    CLIENTS = null;
  }

