  private byte[] heapPartition(
      HeapPointWriter points,
      PointWriter left,
      PointWriter right,
      int dim,
      int from,
      int to,
      int partitionPoint,
      int commonPrefix)
      throws IOException {
    byte[] partition = heapRadixSelect(points, dim, from, to, partitionPoint, commonPrefix);
    for (int i = from; i < to; i++) {
      PointValue value = points.getPackedValueSlice(i);
      if (i < partitionPoint) {
        left.append(value);
      } else {
        right.append(value);
      }
    }
    return partition;
  }

