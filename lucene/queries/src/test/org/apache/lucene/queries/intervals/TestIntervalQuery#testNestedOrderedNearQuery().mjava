  public void testNestedOrderedNearQuery() throws IOException {
    // onear/1(w1, onear/2(w2, w3))
    Query q =
        new IntervalQuery(
            field,
            Intervals.ordered(
                Intervals.term("w1"),
                Intervals.maxwidth(
                    3, Intervals.ordered(Intervals.term("w2"), Intervals.term("w3")))));

    checkHits(q, new int[] {0, 1, 3});
  }

