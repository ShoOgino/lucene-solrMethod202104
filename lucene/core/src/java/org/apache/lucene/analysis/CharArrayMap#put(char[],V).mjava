  /**
   * Add the given mapping. If ignoreCase is true for this Set, the text array will be directly
   * modified. The user should never modify this text array after calling this method.
   */
  public V put(char[] text, V value) {
    if (ignoreCase) {
      CharacterUtils.toLowerCase(text, 0, text.length);
    }
    int slot = getSlot(text, 0, text.length);
    if (keys[slot] != null) {
      final V oldValue = values[slot];
      values[slot] = value;
      return oldValue;
    }
    keys[slot] = text;
    values[slot] = value;
    count++;

    if (count + (count >> 2) > keys.length) {
      rehash();
    }

    return null;
  }

