    Reader reader = new StringReader("AnD");
    TokenStream stream = whitespaceMockTokenizer(reader);
    stream =
        tokenFilterFactory(
                "Capitalization",
                "keep",
                "and the it BIG",
                "onlyFirstWord",
                "true",
                "forceFirstLetter",
                "true")
            .create(stream);
    assertTokenStreamContents(stream, new String[] {"And"});
