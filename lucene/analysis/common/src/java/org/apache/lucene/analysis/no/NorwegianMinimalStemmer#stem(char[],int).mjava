  public int stem(char s[], int len) {
    // Remove genitiv s
    if (len > 4 && s[len - 1] == 's') len--;

    if (len > 5
        && (endsWith(s, len, "ene")
            || // masc/fem/neutr pl definite (hus-ene)
            (endsWith(s, len, "ane") && useNynorsk // masc pl definite (gut-ane)
            ))) return len - 3;

    if (len > 4
        && (endsWith(s, len, "er")
            || // masc/fem indefinite
            endsWith(s, len, "en")
            || // masc/fem definite
            endsWith(s, len, "et")
            || // neutr definite
            (endsWith(s, len, "ar") && useNynorsk // masc pl indefinite
            ))) return len - 2;

    if (len > 3)
      switch (s[len - 1]) {
        case 'a': // fem definite
        case 'e': // to get correct stem for nouns ending in -e (kake -> kak, kaker -> kak)
          return len - 1;
      }

    return len;
  }

