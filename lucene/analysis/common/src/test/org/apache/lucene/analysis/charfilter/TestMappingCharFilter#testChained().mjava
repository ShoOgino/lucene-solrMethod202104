  //
  //
  //        0123456789
  // (in)    aaaa ll h
  // (out-1) aa llll i
  // (out-2) a llllllll i
  //
  // aaaa,0,4 => a,0,4
  //   ll,5,7 => llllllll,5,7
  //    h,8,9 => i,8,9
  public void testChained() throws Exception {
    String testString = "aaaa ll h";
    CharFilter cs =
        new MappingCharFilter(
            normMap, new MappingCharFilter(normMap, new StringReader(testString)));
    TokenStream ts = whitespaceMockTokenizer(cs);
    assertTokenStreamContents(
        ts,
        new String[] {"a", "llllllll", "i"},
        new int[] {0, 5, 8},
        new int[] {4, 7, 9},
        testString.length());
  }

