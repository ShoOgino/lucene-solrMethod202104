    @Override
    public boolean within(double minX, double maxX, double minY, double maxY) {
      if (crossesDateline) {
        return Component2D.within(
                rectangle.minLon,
                GeoUtils.MAX_LON_INCL,
                rectangle.minLat,
                rectangle.maxLat,
                minX,
                maxX,
                minY,
                maxY)
            || Component2D.within(
                GeoUtils.MIN_LON_INCL,
                rectangle.maxLon,
                rectangle.minLat,
                rectangle.maxLat,
                minX,
                maxX,
                minY,
                maxY);
      } else {
        return Component2D.within(
            rectangle.minLon,
            rectangle.maxLon,
            rectangle.minLat,
            rectangle.maxLat,
            minX,
            maxX,
            minY,
            maxY);
      }
    }

