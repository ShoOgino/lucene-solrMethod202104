  // LUCENE-6075
  public void testOverflowInt() throws Exception {
    Thread t =
        new Thread() {
          @Override
          public void run() {
            expectThrows(
                ThreadInterruptedException.class,
                () -> {
                  new SimpleRateLimiter(1)
                      .pause((long) (1.5 * Integer.MAX_VALUE * 1024 * 1024 / 1000));
                });
          }
        };
    t.start();
    Thread.sleep(10);
    t.interrupt();
  }

