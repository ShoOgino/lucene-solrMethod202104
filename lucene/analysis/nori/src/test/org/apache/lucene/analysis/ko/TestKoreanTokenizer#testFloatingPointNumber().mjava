  public void testFloatingPointNumber() throws IOException {
    assertAnalyzesTo(
        analyzerWithPunctuation,
        "10.1 인치 모니터",
        new String[] {"10", ".", "1", " ", "인치", " ", "모니터"},
        new int[] {0, 2, 3, 4, 5, 7, 8},
        new int[] {2, 3, 4, 5, 7, 8, 11},
        new int[] {1, 1, 1, 1, 1, 1, 1});

    assertAnalyzesTo(
        analyzer,
        "10.1 인치 모니터",
        new String[] {"10", "1", "인치", "모니터"},
        new int[] {0, 3, 5, 8},
        new int[] {2, 4, 7, 11},
        new int[] {1, 1, 1, 1});
  }

