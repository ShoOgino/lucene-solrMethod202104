  /** Test feminine noun inflections */
  public void testFeminineNouns() throws IOException {
    check("लडकी", "लडक");
    check("लडकियों", "लडक");

    check("किताब", "किताब");
    check("किताबें", "किताब");
    check("किताबों", "किताब");

    check("आध्यापीका", "आध्यापीक");
    check("आध्यापीकाएं", "आध्यापीक");
    check("आध्यापीकाओं", "आध्यापीक");
  }

