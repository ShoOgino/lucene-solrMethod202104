  private void tooManyDocs(long addedNumDocs) {
    assert addedNumDocs >= 0;
    throw new IllegalArgumentException(
        "number of documents in the index cannot exceed "
            + actualMaxDocs
            + " (current document count is "
            + pendingNumDocs.get()
            + "; added numDocs is "
            + addedNumDocs
            + ")");
  }

