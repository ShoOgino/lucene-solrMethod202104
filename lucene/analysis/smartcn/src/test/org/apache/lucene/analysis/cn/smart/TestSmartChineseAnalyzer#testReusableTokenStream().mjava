  public void testReusableTokenStream() throws Exception {
    Analyzer a = new SmartChineseAnalyzer();
    assertAnalyzesTo(
        a,
        "我购买 Tests 了道具和服装",
        new String[] {"我", "购买", "test", "了", "道具", "和", "服装"},
        new int[] {0, 1, 4, 10, 11, 13, 14},
        new int[] {1, 3, 9, 11, 13, 14, 16});
    assertAnalyzesTo(
        a,
        "我购买了道具和服装。",
        new String[] {"我", "购买", "了", "道具", "和", "服装"},
        new int[] {0, 1, 3, 4, 6, 7},
        new int[] {1, 3, 4, 6, 7, 9});
    a.close();
  }

