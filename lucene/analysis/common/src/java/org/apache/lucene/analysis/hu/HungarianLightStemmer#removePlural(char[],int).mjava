  @SuppressWarnings("fallthrough")
  private int removePlural(char s[], int len) {
    if (len > 3 && s[len - 1] == 'k')
      switch (s[len - 2]) {
        case 'a':
        case 'o':
        case 'e':
          if (len > 4) return len - 2; /* intentional fallthru */
        default:
          return len - 1;
      }
    return len;
  }

