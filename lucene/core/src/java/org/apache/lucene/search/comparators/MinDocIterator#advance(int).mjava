  @Override
  public int advance(int target) throws IOException {
    assert target > doc;
    if (doc == -1) {
      // skip directly to minDoc
      doc = Math.max(target, segmentMinDoc);
    } else {
      doc = target;
    }
    if (doc >= maxDoc) {
      doc = NO_MORE_DOCS;
    }
    return doc;
  }

