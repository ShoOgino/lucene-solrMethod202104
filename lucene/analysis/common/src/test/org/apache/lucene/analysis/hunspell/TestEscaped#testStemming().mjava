  public void testStemming() {
    assertStemsTo("/", "/");
    assertStemsTo("works", "work");
    assertStemsTo("work", "work");
    assertStemsTo("R2/D2", "R2/D2", "R2/d2");
    assertStemsTo("R2/D2s", "R2/D2");
    assertStemsTo("N/A", "N/A");
    assertStemsTo("N/As");

    assertStemsTo("/", "/");
    assertStemsTo("/a", "/a");
    assertStemsTo("//");
  }

