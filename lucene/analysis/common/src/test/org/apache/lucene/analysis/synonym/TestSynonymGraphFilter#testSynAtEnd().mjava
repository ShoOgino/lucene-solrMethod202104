  public void testSynAtEnd() throws Exception {
    SynonymMap.Builder b = new SynonymMap.Builder();
    add(b, "a b", "x", true);

    Analyzer a = getAnalyzer(b, true);
    assertAnalyzesTo(
        a,
        "c d e a b",
        new String[] {"c", "d", "e", "x", "a", "b"},
        new int[] {0, 2, 4, 6, 6, 8},
        new int[] {1, 3, 5, 9, 7, 9},
        new String[] {"word", "word", "word", "SYNONYM", "word", "word"},
        new int[] {1, 1, 1, 1, 0, 1},
        new int[] {1, 1, 1, 2, 1, 1});
    a.close();
  }

