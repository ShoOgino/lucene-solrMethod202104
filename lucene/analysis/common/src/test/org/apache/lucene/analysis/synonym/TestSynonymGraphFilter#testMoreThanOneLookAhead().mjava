  public void testMoreThanOneLookAhead() throws Exception {
    SynonymMap.Builder b = new SynonymMap.Builder();
    add(b, "a b c d", "x", true);

    Analyzer a = getAnalyzer(b, true);
    assertAnalyzesTo(
        a,
        "a b c e",
        new String[] {"a", "b", "c", "e"},
        new int[] {0, 2, 4, 6},
        new int[] {1, 3, 5, 7},
        new String[] {"word", "word", "word", "word"},
        new int[] {1, 1, 1, 1},
        new int[] {1, 1, 1, 1});
    a.close();
  }

