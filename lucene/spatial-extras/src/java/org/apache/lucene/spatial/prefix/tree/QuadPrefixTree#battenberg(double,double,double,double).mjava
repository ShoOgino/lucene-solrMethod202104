  protected int battenberg(double xmid, double ymid, double xp, double yp) {
    // http://en.wikipedia.org/wiki/Z-order_%28curve%29
    if (ymid <= yp) {
      if (xmid >= xp) {
        return 0;
      }
      return 1;
    } else {
      if (xmid >= xp) {
