  public void testSeparateNumber() throws IOException {
    assertAnalyzesTo(
        analyzer,
        "44사이즈",
        new String[] {"44", "사이즈"},
        new int[] {0, 2},
        new int[] {2, 5},
        new int[] {1, 1});

    assertAnalyzesTo(
        analyzer,
        "９.９사이즈",
        new String[] {"９", "９", "사이즈"},
        new int[] {0, 2, 3},
        new int[] {1, 3, 6},
        new int[] {1, 1, 1});
  }

