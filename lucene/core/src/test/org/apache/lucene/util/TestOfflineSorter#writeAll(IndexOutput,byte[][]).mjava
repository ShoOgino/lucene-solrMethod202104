  /** NOTE: closes the provided {@link IndexOutput} */
  private void writeAll(IndexOutput out, byte[][] data) throws IOException {
    try (ByteSequencesWriter w = new OfflineSorter.ByteSequencesWriter(out)) {
      for (byte[] datum : data) {
        w.write(datum);
      }
      CodecUtil.writeFooter(out);
    }
  }

