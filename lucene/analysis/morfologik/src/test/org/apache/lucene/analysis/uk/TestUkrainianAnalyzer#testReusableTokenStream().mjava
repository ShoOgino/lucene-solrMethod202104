    assertAnalyzesTo(
        a,
        "Ця п'єса, у свою чергу, рухається по емоційно-напруженому колу за ритм-енд-блюзом.",
        new String[] {
          "п'єса",
          "черга",
          "рухатися",
          "емоційно",
          "напружений",
          "кола",
          "коло",
          "кіл",
          "ритм",
          "енд",
          "блюз"
        });
    a.close();
  }

