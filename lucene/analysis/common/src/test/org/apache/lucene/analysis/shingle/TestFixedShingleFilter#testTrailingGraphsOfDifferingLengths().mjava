  public void testTrailingGraphsOfDifferingLengths() throws IOException {

    // a b:3/c d e f
    TokenStream ts =
        new CannedTokenStream(
            new Token("a", 0, 1),
            new Token("b", 1, 2, 3, 3),
            new Token("c", 0, 2, 3),
            new Token("d", 2, 3),
            new Token("e", 2, 3),
            new Token("f", 4, 5));

    assertTokenStreamContents(
        new FixedShingleFilter(ts, 3), new String[] {"a b f", "a c d", "c d e", "d e f"});
  }

